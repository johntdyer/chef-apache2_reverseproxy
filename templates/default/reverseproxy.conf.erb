<VirtualHost *:<%= @params[:port] %>>
    <% if @params[:servername] %>
    ServerName <%= @params[:servername] %>
    <% end %>

    ProxyPreserveHost On

    ProxyPass <%= @params[:proxypass_base] %> <%= @params[:proxypass_target] %>
    ProxyPassReverse <%= @params[:proxypass_base] %> <%= @params[:proxypass_target] %>

</VirtualHost>
